<Page x:Class="VM.UserWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/> 
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            
            <Grid x:Name="Taskbar" Grid.Row="1" Grid.Column="0">
                <StackPanel Orientation="Horizontal" Width="Auto" Height="15" Background="Gray">
                    <Button Click="CloseWindow" Background="LightGray" Width="35" FontFamily="Consolas" FontSize="10" Content="X"/>
                    <Button Click="Minimize" Background="LightGray" Width="35" FontFamily="Consolas" FontSize="10" Content="MIN"/>
                    <Button Click="ToggleMaximize" Background="LightGray"  Width="35" FontFamily="Consolas" FontSize="10" Content="MAX"/>
                </StackPanel>
            </Grid>


        </StackPanel>
        
    </Grid>
</Page>
