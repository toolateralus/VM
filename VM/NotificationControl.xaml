<UserControl x:Class="VM.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightBlue" Opacity="0" Grid.ColumnSpan="1" Grid.RowSpan="1">
    <Grid>
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" Padding="10"/>
    </Grid>
</UserControl>
