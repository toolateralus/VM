<UserControl x:Class="VM.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Pink" Opacity="0" HorizontalAlignment="Right"
             VerticalAlignment="Bottom"
             >
    <Grid>
        <TextBlock FontFamily="Consolas" FontSize="15" Text="{Binding Message}" VerticalAlignment="Stretch" TextWrapping="Wrap" Padding="10"/>
    </Grid>
</UserControl>
