<Window x:Class="VM.GUI.ComputerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM"
        mc:Ignorable="d"
        Title="" Height="1080" Width="1920"
        Background="#f08556"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Desktop" Grid.Row="0" Grid.Column="0">
            <Image Stretch="Fill" x:Name="desktopBackground" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto"/>
            <WrapPanel x:Name="DesktopIconPanel" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            </WrapPanel>
        </Grid>

        <Grid x:Name="Taskbar" Grid.Row="1" Grid.Column="0">
            <StackPanel x:Name="TaskbarStackPanel" Orientation="Horizontal" Width="Auto" Height="25" Background="Gray">
                <Button Click="Taskbar_Click" Background="LightGray" Width="66" FontFamily="Consolas" FontSize="10" Content="Explorer"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
