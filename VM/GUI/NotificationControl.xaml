<UserControl x:Class="VM.GUI.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Opacity="100" HorizontalAlignment="Right"
             VerticalAlignment="Bottom" MinWidth="250" MinHeight="75"
             >
    <Grid >
        <TextBox Background="#348c60" Foreground='White' BorderBrush="Black" BorderThickness="3" x:Name="TextBox" FontFamily="Consolas MS"  FontSize="15" Text="{Binding Message}" VerticalAlignment="Stretch" TextWrapping="Wrap" Padding="10"/>
    </Grid>
</UserControl>
