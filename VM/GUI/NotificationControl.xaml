<UserControl x:Class="VM.GUI.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray" Opacity="0" HorizontalAlignment="Right"
             VerticalAlignment="Bottom"
             >
    <Grid>
        <TextBox x:Name="TextBox" FontFamily="Consolas MS"  FontSize="15" Text="{Binding Message}" VerticalAlignment="Stretch" TextWrapping="Wrap" Padding="10"/>
    </Grid>
</UserControl>
