<UserControl x:Class="Lemur.GUI.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Right"
             VerticalAlignment="Bottom"
             MinWidth="230" MinHeight="85">
    <Grid>
        <Rectangle Fill="Black" Opacity="0.5" UseLayoutRounding="True"/>
        <TextBox Background="Transparent" Foreground="White" BorderThickness="0.5" BorderBrush="DarkCyan" x:Name="TextBox" FontFamily="Consolas MS" Padding="15" FontSize="15" Text="{Binding Message}" 
                 TextAlignment="Center" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
