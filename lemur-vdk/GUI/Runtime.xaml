<Window x:Class="Lemur.GUI.Runtime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemur"
        mc:Ignorable="d"
        Title="" Height="250" Width="300"
        Background="MediumSlateBlue"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Button Height="45" Content="New Computer" Click="NewComputerButton"  FontFamily="Consolas" Margin="169,30,10,30" />
        <Button Height="45" Content="Reinstall Computer" Click="ReinstallComputerButton"  FontFamily="Consolas" Margin="10,30,157,30" />
        <Label Grid.Row="1" Background="SlateGray" Foreground="White" FontFamily="Consolas" >Enter a computer id below.</Label>
        <TextBox x:Name="IDBox" Grid.Row="2" FontFamily="Consolas">
        </TextBox>
    </Grid>
</Window>
