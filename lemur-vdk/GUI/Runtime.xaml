<Window x:Class="Lemur.GUI.Runtime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemur"
        mc:Ignorable="d"
        Title="" Height="125" Width="300"
        Background="MediumSlateBlue"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button MinWidth="150" Content="Boot" Click="NewComputerButton" FontFamily="Consolas"/>
            <Button MinWidth="150" Grid.Row="1" Content="Install" Click="ReinstallComputerButton" FontFamily="Consolas"/>
        </StackPanel>
        <Label Background="SlateGray" Foreground="White" FontFamily="Consolas">Enter a computer id below.</Label>
        <TextBox x:Name="IDBox" Grid.Row="2" FontFamily="Consolas" Text="0"/>
    </Grid>
</Window>
