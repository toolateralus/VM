<UserControl x:Class="Lemur.GUI.FileExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              FontFamily="Cascadia Mono SemiLight" Foreground="White">
    <UserControl.Resources>
        <ContextMenu x:Key="ExplorerContextMenu">
            <MenuItem Header="Add File" Click="AddFile_Click"/>
            <MenuItem Header="Add Directory" Click="AddDirectory_Click"/>
        </ContextMenu>
        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="Delete" Click="Delete_Click"/>
            <MenuItem Header="Properties" Click="Properties_Click"/>
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <StackPanel Style="{StaticResource StackPanelStyle}" Orientation="Horizontal" VerticalAlignment="Top" Background="#FF373738" Margin="10,0,10,0">
            <Button Style="{StaticResource ButtonStyle}" MinWidth="25" Margin="5" BorderBrush="DarkCyan" Foreground="White" Background="#FF5F36A9" Click="BackPressed" Height="20" Content="Back" >
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" MinWidth="25" Margin="0.5" BorderBrush="DarkCyan" Foreground="White" Background="#FF5F36A9" Click="ForwardPressed" Height="20" Content="Forward" >
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" MinWidth="25" Margin="0.5" BorderBrush="DarkCyan" Foreground="White" Background="#FF5F36A9" Click="UpPressed" Height="20" Content="Up" >
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" MinWidth="25" Margin="0.5" BorderBrush="DarkCyan" Foreground="White" Background="#FF5F36A9" Click="SearchPressed"  Height="20" Content="Go" >
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <TextBox Height="20" TextAlignment="Justify" MinWidth="250" Foreground="White" x:Name="SearchBar" Text="Search" Margin="2,5,5,5" BorderBrush="#FF43A7C1" Background="#FF272626" >
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </TextBox.Effect>
            </TextBox>
        </StackPanel>
        <ListBox x:Name="FileBox" Margin="10,35,10,10" ContextMenu="{StaticResource ExplorerContextMenu}" Foreground="White" Background="#FF333030">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" ContextMenu="{StaticResource ItemContextMenu}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
