<Application x:Class="Lemur.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windowing/Runtime.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Windowing/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}" />
            <Style TargetType="Label" BasedOn="{StaticResource LabelStyle}" />
            <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}" />
            <Style TargetType="StackPanel" BasedOn="{StaticResource StackPanelStyle}" />
            <Style TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonStyle}" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
