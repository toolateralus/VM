<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" BorderBrush="White" BorderThickness="5" Background="#474354">
    <Grid>
        <!-- We use a StackPanel for easy alignment -->
        <StackPanel Margin="5" Width="Auto">
            <Label Content="Enter your app's name: (it will be created under home/myApps/)" Background="Transparent"/>
            <TextBox x:Name="nameBox" Text="Untitled" Margin="5" />
            <Label Content="Select your app's type:" Background="Transparent"/>
            <ComboBox x:Name="appTypeBox" Margin="5">
                <ComboBoxItem>Terminal</ComboBoxItem>
                <ComboBoxItem>GUI</ComboBoxItem>
            </ComboBox>
            <Button x:Name="createBtn" Margin="5" HorizontalAlignment="Left" Content="Create App"/>
        </StackPanel>
    </Grid>
</UserControl>