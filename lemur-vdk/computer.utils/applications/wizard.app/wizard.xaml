<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" BorderBrush="White" BorderThickness="5" Background="#474354">
    <Grid>
        <!-- We use a StackPanel for easy alignment -->
        <StackPanel Orientation="Vertical">
            <TextBox BorderBrush="Black" Margin="2,2,2,2" x:Name="nameBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="Enter your apps name (it will be created under home/myApps/)"/>
            <Button BorderBrush="Black" Margin="2,2,2,2" x:Name="createBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Create App"/>
        </StackPanel>
    </Grid>
</UserControl>