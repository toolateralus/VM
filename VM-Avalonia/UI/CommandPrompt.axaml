<UserControl x:Class="VM.Avalonia.CommandPrompt"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ae="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" 
             Height="450" Width="800" Background="Transparent" BorderBrush="White" BorderThickness="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <TextBox TextWrapping="Wrap" Grid.RowSpan="1" Grid.Row="0" x:Name="output"/>
        <TextBox TextWrapping="Wrap" Grid.RowSpan="1" Grid.Row="1" x:Name="input"/>

        <!-- <ae:TextEditor IsReadOnly="true" BorderBrush="White" BorderThickness="1" Grid.Row="0" FontSize="16" x:Name="output"  FontFamily="MS Gothic Bold" WordWrap="True" />
        <ae:TextEditor BorderBrush="White" BorderThickness="1" Grid.Row="1" FontSize="16" x:Name="input" WordWrap="True"/> -->
    </Grid>
</UserControl>
