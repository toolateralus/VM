                                <SolidColorBrush Color="Navy" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="navy"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Style="{StaticResource StackPanelStyle}" Orientation="Horizontal">
                        <Rectangle Width="20" Height="10" Margin="5">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="DeepPink" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="deep pink"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Style="{StaticResource StackPanelStyle}" Orientation="Horizontal">
                        <Rectangle Width="20" Height="10" Margin="5">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="MediumSpringGreen" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="medium spring green"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
            <Slider x:Name="thicknessSlider" Maximum="50" Value="5" Width="200" FontSize="16" Height="25" Opacity="0.75">
                <Slider.Background>
                    <ImageBrush/>
                </Slider.Background>
                <Slider.Effect>
                    <DropShadowEffect/>
                </Slider.Effect>
            </Slider>
            <Button Style="{StaticResource ButtonStyle}" x:Name="ClearButton" Foreground="Black" Content="Clear" FontSize="16" Width="200" Height="25" Opacity="0.75" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" x:Name="FillButton" Foreground="Black" Content="Fill" FontSize="16" Width="200" Height="25" Opacity="0.75" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Label Style="{StaticResource LabelStyle}" Foreground="Black" Content="Saving | Loading" Margin="5" FontSize="16" Width="200" Height="25" Opacity="0.75" BorderBrush="Black">
                <Label.Background>
                    <ImageBrush/>
                </Label.Background>
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
            </Label>
            <Button Style="{StaticResource ButtonStyle}" x:Name="LoadButton" Foreground="Black" Content="Load image" FontSize="16" Width="200" Height="25" Opacity="0.75" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" x:Name="SaveButton" Foreground="Black" Content="Save current image" FontSize="16" Width="200" Height="25" Opacity="0.75" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
           
        </StackPanel>
    </Grid>
</UserControl>

